{%# if localization.country.iso_code == 'US' %}
  {% liquid
    assign cartTotalPrice = cart.total_price | divided_by: 100.0
    assign rangeToValue = cartTotalPrice | divided_by: free_shipping | times: 100
    if rangeToValue > 100
      assign rangeToValue = 100
    endif
    assign rangeToValue = rangeToValue | append: '%'
  %}

  <style>
    .mcart-range-slider {
      height: 6px;
      width: 100%;
      border-radius: 20px;
      background: rgb(181 18 71 / 38%);
      box-sizing: border-box;
      position: relative;
      transition: .3s;
      /* overflow: hidden; */
      display: block !important;
    }
    .mcart-range-slider:before{
      position: absolute;
      content: "";
      width: {{rangeToValue}};
      height: 100%;
      background: #af003a;
      transition: .3s;
      border-radius: 20px;
    }
