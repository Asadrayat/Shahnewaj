{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: #FFCD80;
  }

  #shopify-section-{{id}} {
    .content-wrapper {
      display: flex;
      {% comment %} padding-right: var(--Spacing-Container-xxl, 80px); {% endcomment %}
      flex-direction: column;
      align-items: flex-start;
      gap: var(--Spacing-Container-md, 24px);
      flex: 1 0 0;
      @media(max-width: 768px){
        padding-right: unset;
      }
    }  
    .text-wrapper{
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      align-self: stretch;
      margin-bottom: 40px;
          @media(width < 768px) {
            margin-bottom: 24px;
         }        
    }
    h2.--section-title {
        line-height: 100%;
        color: #AF003A;
        /* font-family: var(--font-family-Title, "Neue Plak"); */
        font-size: 76px;
        margin: 0;
        font-weight: 500;
        text-align: center;
        /* line-height: var(--Line-Height-Heading-H2, 40px); */
        letter-spacing: 0;        
        /* margin-block: 0 var(--Spacing-Container-xxs); */
        @media(width < 768px) {
        font-size: 32px;
        margin-bottom: 0;
        }        
        em {
            display: block;
            font-style: unset;
            @media(max-width: 768px) {
                display: unset;
            }
        }
    }
    .text {
        color: var(--Color-Red-AF003A-Dark, #AF003A);
        text-align: center;
        margin: 0;
        /* Proxima Nova/Bold 28 px */
        font-family: "Proxima";
        font-size: 28px;
        font-style: normal;
        font-weight: 700;
        line-height: 38px; /* 135.714% */
        @media(width < 768px) {
            font-size: 24px;
        }   
        em {
            display: block;
            font-style: unset;
            @media(max-width: 768px) {
                display: unset;
            }
        }       
    }
    .contact__button {
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;   
      .button {
        max-width: max-content;
        width: 100%;
        cursor: pointer;
        color: #FFF;
        text-align: center;
        line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 20px);
        text-transform: uppercase;
        display: block;  
      }  
    }
  }

  @media(max-width: 768px) {    
    .sec-{{ id }} option.field__label {
      font-size: 14px;
      max-width: 100%;
      white-space: normal;      /* allow wrapping if possible */
      overflow-wrap: anywhere;  /* break long words */
    }
  }

  @media(max-width: 600px) {
    #shopify-section-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }    
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="content-wrapper">
        <div class="text-wrapper">
          <h2 class="--section-title">{{ section.settings.title }}</h2>
          <p class="text">{{ section.settings.des }}</p>
        </div>
      </div>
         {% unless section.settings.label == blank %}
         <div class="contact__button">  <a href="{{ section.settings.link }}" class="button button--primary">{{ section.settings.label }}</a></div>
         {% endunless %}   
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Text",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "Contact us"
    },
    {
      "type": "inline_richtext",
      "id": "des",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Button Label",
      "default": "Shop & Subscribe Now"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}
