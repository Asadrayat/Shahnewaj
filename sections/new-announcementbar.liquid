{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      z-index: 2;
    }
  }
  .wrapper-{{ id }} {
    padding: 12px 0;
  }
  .sec-{{ id }} .swiper-wrapper{
    -webkit-transition-timing-function:linear!important;
    transition-timing-function:linear!important;
    position: relative;
    justify-content: flex-start;
  }

  .sec-{{ id }} .swiper-slide {
    text-align: center;
    {% comment %} color: #000; {% endcomment %}
    {% comment %} font-family: var(--font-family-Body, "Neue Plak"); {% endcomment %}
    color: #af003a;
    text-transform: uppercase;
    font-weight: 600;
    font-family: Almarai, sans-serif !important;
    width: auto;
    position: relative;
    {% comment %} padding: 0 40px; {% endcomment %}
  }
  .sec-{{ id }} .--nav-icon.swiper-button-disabled {
    background: inherit;
  }
  .sec-{{ id }} .--nav-icon{
    position: absolute;    
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;    
  }
  .sec-{{ id }} .prev-{{ section.id }}{
    left: 0    
  }
  .sec-{{ id }} .next-{{ section.id }}{
    right: 0    
  }

  @keyframes line-slide {
    0% {
      background-position: -5% 0;
    }
    100% {
      background-position: 100% 0;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }} color-{{ section.settings.color_scheme }} ">
      <div class="swiper">
        {% if section.settings.announcement_type == 'marquee' %}
        <div class="swiper-wrapper">
          {% for i in (1..15) %}
            {% for block in section.blocks %}
              <div class="swiper-slide">
                {% if block.settings.title != blank %}
                  {{ block.settings.title }}
                {% endif %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
        {% else %}
        <div class="swiper-wrapper">
          {% for i in (1..15) %}
            {% for block in section.blocks %}
              <div class="swiper-slide">
                {% if block.settings.title != blank %}
                  {{ block.settings.title }}
                {% endif %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
        <div class="prev-{{ section.id }} --nav-icon ">
          {% comment %}
            {% render 'all-icons', name: 'left_arrow' %}
          {% endcomment %}
          {% render 'all-icons', name: 'left_arrow' %}
        </div>
        <div class="next-{{ section.id }} --nav-icon ">
          {% render 'all-icons', name: 'right_arrow' %}
          {% comment %}
            {% render 'all-icons', name: 'right_arrow' %}
          {% endcomment %}
        </div>     
        {% endif %}
      </div>
    </div>
  </div>
</div>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper('.wrapper-{{ id }} .swiper', {
      {% if section.settings.announcement_type == 'marquee' %}
        spaceBetween: 20,
        centeredSlides: false,
        speed: 11000,
        autoplay: {
          delay: 1,
        },     
        spaceBetween: 20,
        slidesPerView:'auto',
        allowTouchMove: false,
        disableOnInteraction: true
        {% else %}
        slidesPerView: 1,   
        allowTouchMove: true,   
        autoplay: true,
        autoplay: {
          delay: 5000,
        },               
        navigation: {
          nextEl: '.next-{{ section.id }}',
          prevEl: '.prev-{{ section.id }}'
        }       
       {% endif %}
    });
  });
</script>

{% schema %}
{
  "name": "New Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    },
    {
      "type": "select",
      "id": "announcement_type",
      "label": "Visiblity Type",
      "options": [
        {
          "value": "slider",
          "label": "Slider"
        },
        {
          "value": "marquee",
          "label": "Marquee"
        }
      ],
      "default": "marquee"
    },    
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Announcement Bar"
    }
  ]
}
{% endschema %}
