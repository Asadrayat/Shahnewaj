{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: var(--New, #FFF4E5);

    h2.--section-title {
            color: #AF003A;
            /* font-family: var(--font-family-Title, "Neue Plak"); */
            font-size: 76px;
            margin: 0;
            font-weight: 500;
            {% comment %} text-align: center; {% endcomment %}
            /* line-height: var(--Line-Height-Heading-H2, 40px); */
            letter-spacing: 0;
            margin-bottom: 40px;
            /* margin-block: 0 var(--Spacing-Container-xxs); */
            @media(width < 768px) {
            font-size: 32px;
            margin-bottom: 24px;
            }        
            em {
                display: block;
                font-style: unset;
                @media(max-width: 768px) {
                    display: unset;
                }
            }


    }     

  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

.wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(2,1fr);
    align-items: center;
    @media(max-width: 600px) {
      grid-template-columns: 1fr;
      gap: var(--Spacing-Container-lg, 24px);
    }


.--image-wrapper {
    border-radius: var(--rounded-lg, 8px);
    overflow: hidden;  
    @media(max-width: 600px) {
       grid-row: 1/2;
     }
  img {
    width: 100%;
    height: auto;
    max-Width: 540px;
    object-fit: cover;
  }
   
}
.--image-wrapper.--img-last {
    display: flex;
    justify-content: flex-end;  
}
  
.--text-block-container.--text-first {
    padding-right: 64px;
     @media(max-width: 600px) {
       padding-right: unset;
     }
}
.--text-block-container.--text-last {
    padding-left: 64px;
    @media(max-width: 600px) {
       padding-left: unset;
     }
}


.--content *{
    color: var(--Color-Red-AF003A-Dark, #AF003A);    
}
.--content p {    
    text-align: justify;
    font-family: "arial";
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 28px;   
    margin: 0 0 32px;
     @media(max-width: 600px) {
       font-size: 16px;
     }        
}
.--content h3 {
    font-family: "Proxima" !important;
    font-size: 28px;
    font-style: normal;
    font-weight: 700;
    line-height: 140%;
    text-transform: capitalize;
    letter-spacing: 0;
    margin: 0 0 12px;
    position: relative;
    padding-left: 32px;
     @media(max-width: 600px) {
       font-size: 20px;
     }    
    &::after {
        position: absolute;
        content: url("https://cdn.shopify.com/s/files/1/0576/1204/2410/files/Icons_4a915ba4-da15-43a0-aa73-b609edad432e.svg?v=1756147536");
        width: 16px;
        height: 16px;
        top: 0;
        left: 0;        
    }

}
  
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="--section-title center large-up-hide medium-hide">{{ section.settings.title }}</h2>    
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper  {% if forloop.first %} --img-first {% else %}--img-last{% endif %}">
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">  
              <h2 class="--section-title small-hide">{{ section.settings.title }}</h2>              
              <div class="--content">{{ block.settings.content }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Media Text ",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }        
      ]
    }
  ],
  "presets": [
    {
      "name": "Media Text "
    }
  ]
}
{% endschema %}
