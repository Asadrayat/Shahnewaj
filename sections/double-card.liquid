{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: url("{{ section.settings.img | image_url: width: section.settings.img.width }} ");
    background-size: cover;
    background-position: 100% 100%;    
   .page-width {
        max-width: 1072px;
    }
    h2.--section-title {
        color: #fff;
        /* font-family: var(--font-family-Title, "Neue Plak"); */
        font-size: 76px;
        margin: 0;
        font-weight: 500;
        text-align: center;
        /* line-height: var(--Line-Height-Heading-H2, 40px); */
        letter-spacing: 0;
        margin-bottom: 52px;
        /* margin-block: 0 var(--Spacing-Container-xxs); */
        @media(width < 768px) {
          font-size: 32px;
          margin-bottom: 32px;
        }        
        em {
            display: block;
            font-style: unset;
            @media(max-width: 768px) {
                display: unset;
            }
        }


    }    
    .button.button--primary {
        max-width: 100%;
        margin: 28px auto 0;
        display: flex;
        width: 100%;
        background: #1281A3 !important;
        @media(width < 768px) {
            margin: 16px auto 0;
        }
    }
    h2.--section-title {
        color: #fff;
        /* font-family: var(--font-family-Title, "Neue Plak"); */
        font-size: 76px;
        margin: 0;
        font-weight: 500;
        text-align: center;
        /* line-height: var(--Line-Height-Heading-H2, 40px); */
        letter-spacing: 0;
        margin-bottom: 48px;
        /* margin-block: 0 var(--Spacing-Container-xxs); */
        @media(width < 768px) {
          font-size: 32px;
          margin-bottom: 32px;
        }
        em {
            display: block;
            font-style: unset;
            @media(max-width: 768px) {
                display: unset;
            }
        }


    }
    .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    max-width: 100%;
    gap: 28px;
    justify-items: stretch;
    align-items: stretch;
    @media(max-width: 1200px) {
        grid-template-columns: repeat(2, 1fr);
    }    
    @media(max-width: 600px) {
        grid-template-columns: repeat(1, 1fr);
    }    
    }
    .colon {
      line-height: 0;
    }
    .wrapper-{{ id }} .top {
    padding: 0;
    }
    .wrapper-{{ id }} .content__wrapper {    
    width: 100%;
    display: flex;
    gap: 0;
    overflow: hidden;
    border-radius: 32px;
    flex-direction: column;
    background: #fff;
    box-sizing: border-box;
    justify-content: center;
    padding: 32px 28px;
    }
    .wrapper-{{ id }} .user{

    color: #1281A3;
    text-align: center;

    /* Proxima Nova/new 40 px */
    font-family: "Proxima";
    font-size: 40px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 120% */
    text-transform: capitalize; 
        @media(max-width : 1050px ) {
            font-size: 32px;
        }    
        @media(max-width: 600px) {
            font-size: 28px;
        }
    }
    .wrapper-{{ id }} .content__{
    color: #1281A3;
    text-align: center;
    font-family: "Proxima";
    font-size: 40px;
    font-style: normal;
    font-weight: 700;
    line-height: 140%;
    text-transform: capitalize;
    @media(max-width : 1050px ) {
        font-size: 28px;
    }    
    @media(max-width: 600px) {
        font-size: 24px;
    }    
    em {
        display: block;
        font-style: unset;
        @media(max-width: 768px) {
            display: unset;
        }
    }    
    }
    .content__ *{
    margin: 0;

    }
  } 
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">   
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="--section-title">{{ section.settings.heading }}</h2>
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        <div class="content__wrapper">
            <div class="top">
          {% if block.settings.content != blank %}
            <div class="content__">{{ block.settings.content }}</div>
          {% endif %}
          </div>
         {% unless block.settings.label == blank %}
         <div class="contact__button">  <a href="{{ block.settings.link }}" class="button button--primary">{{ block.settings.label }}</a></div>
         {% endunless %}   
        </div>
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Double Card",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Who We Serve"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "content",
          "label": "Content"
        },
        {
        "type": "text",
        "id": "label",
        "label": "Button Label",
        "default": "Browse Store"
        },
        {
        "type": "url",
        "id": "link",
        "label": "Button Link"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Double Card"
    }
  ]
}
{% endschema %}
