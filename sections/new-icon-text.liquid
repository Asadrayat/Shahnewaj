{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background: #FFF4E5;
    .badge__img {
      width: 100%;
      max-width: max-content;
      height: auto;
      object-fit: cover;
      line-height: 0;
        @media(width < 768px) {
        }
    }

    h2.--section-title {
          color: #AF003A;
          /* font-family: var(--font-family-Title, "Neue Plak"); */
          font-size: 76px;
          margin: 0;
          font-weight: 500;
          text-align: center;
          /* line-height: var(--Line-Height-Heading-H2, 40px); */
          letter-spacing: 0;
          /* margin-block: 0 var(--Spacing-Container-xxs); */
          {% if section.settings.text == blank %}
            margin: 30px 0 52px;
          {% endif %}
          @media(width < 768px) {
            font-size: 32px;
            margin-bottom: 0;

            {% if section.settings.text == blank %}
              margin: 16px 0 24px;
            {% endif %}
          }
          em {
              display: block;
              font-style: unset;
              @media(max-width: 768px) {
                  display: unset;
              }
          }


    }
    .text {
      color: var(--Color-Red-AF003A-Dark, #AF003A);
      text-align: center;
      margin: 30px 0 52px;
      /* Proxima Nova/Bold 28 px */
      font-family: "arial";
      font-size: 28px;
      font-style: normal;
      {% comment %} font-weight: 700; {% endcomment %}
      line-height: 38px; /* 135.714% */
      @media(width < 768px) {
          margin: 16px 0 24px;
          font-size: 20px;
      }
      em {
          display: block;
          font-style: unset;
          @media(max-width: 768px) {
              display: unset;
          }
      }
    }
    .wrapper-{{ id }}  {
      display: flex;
      align-items: baseline;
      gap: 64px;
      justify-content: center;  
      @media(max-width: 1200px)     {
        flex-wrap: wrap;
        gap:32px;
      }
      @media(max-width: 600px) {
          gap:20px;
      }      
    }

    .wrapper-{{ id }} .content__wrapper {
      color: #AF003A;
      font-style: normal;
      font-weight: 400;
      width: max-content;
      display: flex;
      gap: 24px;
      align-items: center;
      overflow: hidden;
      flex-direction: column;
      @media(max-width: 600px) {
                width: 100%;
      }
    }
    .wrapper-{{ id }} .content__{
      font-size: 20px;
      line-height: 140%;
      text-align: center;
      font-family: "Proxima";
      @media(max-width: 600px) {
          font-size: 18px;
      }
      strong {
          font-size: 26px;
          font-weight: 400;
          display: block;
          margin: 0 0 12px;
          display: block;
          @media(max-width: 600px) {
             font-size: 20px;
          }
      }
    }
    .wrapper-{{ id }} .swiper-slide{
      display: flex;
      justify-content: start;
      {% comment %} background: #FFF2E1;
      padding: 28px;
      border-radius: 32px;
      border: 1px solid #FFAE42;   {% endcomment %}
      box-sizing: border-box;
    }
    .content__ *{
      margin: 0 0 12px;
      text-align: center;
      font-family: "Proxima";

    }
  }
  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .wrapper-{{ id }} .swiper-slide{
      justify-content: center;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="--section-title">{{ section.settings.heading }}</h2>
    <p class="text">{{ section.settings.text }}</p>
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        <div class="content__wrapper">
          {% if block.settings.badge != blank %}
            <div class="badge__img">
              {{ block.settings.badge | image_url: width: 84 | image_tag }}
            </div>
          {% endif %}
          {% if block.settings.text != blank %}
            <div class="content__">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
      {% comment %}
        <div class="swiper badges-{{ id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="content__wrapper">
                  {% if block.settings.badge != blank %}
                    <div class="badge__img">
                      {{ block.settings.badge | image_url: width: 84 | image_tag }}
                    </div>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <div class="content__">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endcomment %}
    </div>
  </div>
</div>

<script>
  {% comment %} document.addEventListener('DOMContentLoaded', () => {
    const swiperOptions = {
      slidesPerView: 1,
      spaceBetween: 0,
      breakpoints: {
        600: {
          slidesPerView: 1.8,
          spaceBetween: 20,
        },
        850: {
          slidesPerView: 2.6,
          spaceBetween: 20,
        },
        969: {
          slidesPerView: 3.2,
          spaceBetween: 20,
        },
        1200: {
          slidesPerView: 4,
          spaceBetween: 32,
        },
      },
    };

    // Conditionally add autoplay if screen width < 600
    if (screen.width < 600) {
      swiperOptions.loop = true;
      // swiperOptions.speed = 5000;
      // swiperOptions.autoplay = {
      //delay: 0,
      //    disableOnInteraction: false,
      //pauseOnMouseEnter: true,
      //  };
    }

    new Swiper('.badges-{{ id }}.swiper', swiperOptions);
  });

  function setEqualHeight(selector) {
    const divs = document.querySelectorAll(selector);
    const maxHeight = Math.max(...Array.from(divs, (div) => div.offsetHeight));
    divs.forEach((div) => {
      div.style.height = `${maxHeight}px`;
    });
  }
  document.addEventListener('DOMContentLoaded', () => {
    setEqualHeight('.sec-{{ id }} .content__');
  }); {% endcomment %}
</script>

